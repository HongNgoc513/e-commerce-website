@page
@model TNS_Employee.Areas.Employee.Pages.UserRoleModel
@{
}
<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <h4 class="mb-0">PHÂN QUYỀN TRUY CẬP</h4>
        </div>
        <form asp-action="Save" method="post">
            <div> <input hidden asp-for="RoleInfo.UserKey" /> </div>
            <div class="row mb-4">
                <div class="card mb-0">
                    <div style="width:100%; background-color:lemonchiffon">
                        <div class="btn-group col-md-3">
                            <a href="/Employee/UserList" class="btn btn-primary waves-light waves-effect"><i class="uil-corner-up-left"></i></a>
                            <button type="submit" class="btn btn-primary waves-light waves-effect"><i class="fa fa-save"></i></button>
                            <button type="button" class="btn btn-primary waves-light waves-effect"><i class="far fa-trash-alt"></i></button>
                        </div>
                    </div>
                    <table id="datatable-grid" class="table table-striped table-bordered" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>ID</th>
                                <th>Tên</th>
                                <th>Đọc</th>
                                <th>Thêm mới</th>
                                <th>Sửa</th>
                                <th>Xóa</th>
                                <th>Duyệt</th>
                            </tr>
                        </thead>

                        <tbody>

                            @for (int i = 0; i < Model.RoleInfo.listRole.Count; i++)
                            {
                                // var zStatus = @Model.listUser.Rows[i]["Status"].ToString();
                                <tr>
                                    <td>
                                        @(i + 1)
                                        <div> <input hidden asp-for="RoleInfo.listRole[i].RoleKey" /> </div>
                                        <div> <input hidden asp-for="RoleInfo.listRole[i].UserKey" /> </div>
                                        <div> <input hidden asp-for="RoleInfo.listRole[i].RecordExist" type="checkbox" /> </div>
                                    </td>
                                    <td>
                                        @Model.RoleInfo.listRole[i].RoleID
                                    </td>
                                  
                                    <td>
                                        @Model.RoleInfo.listRole[i].RoleName
                                    </td>
                                    <td>
                                        <div class="form-check form-switch">
                                            @if (Model.RoleInfo.listRole[i].IsRead)
                                            {
                                                <input asp-for="@Model.RoleInfo.listRole[i].IsRead" type="checkbox" class="form-check-input" checked>
                                            }
                                            else
                                            {
                                                <input asp-for="@Model.RoleInfo.listRole[i].IsRead" type="checkbox" class="form-check-input">
                                            }
                                            <span asp-validation-for="@Model.RoleInfo.listRole[i].IsRead"></span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-check form-switch">
                                            @if (Model.RoleInfo.listRole[i].IsAdd)
                                            {
                                                <input asp-for="@Model.RoleInfo.listRole[i].IsAdd" type="checkbox" class="form-check-input" checked>
                                            }
                                            else
                                            {
                                                <input asp-for="@Model.RoleInfo.listRole[i].IsAdd" type="checkbox" class="form-check-input">
                                            }
                                            <span asp-validation-for="@Model.RoleInfo.listRole[i].IsAdd"></span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-check form-switch">
                                            @if (Model.RoleInfo.listRole[i].IsEdit)
                                            {
                                                <input asp-for="@Model.RoleInfo.listRole[i].IsEdit" type="checkbox" class="form-check-input" checked>
                                            }
                                            else
                                            {
                                                <input asp-for="@Model.RoleInfo.listRole[i].IsEdit" type="checkbox" class="form-check-input">
                                            }

                                            <span asp-validation-for="@Model.RoleInfo.listRole[i].IsEdit"></span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-check form-switch">
                                            @if (Model.RoleInfo.listRole[i].IsDelete)
                                            {
                                                <input asp-for="@Model.RoleInfo.listRole[i].IsDelete" type="checkbox" class="form-check-input" checked>
                                            }
                                            else
                                            {
                                                <input asp-for="@Model.RoleInfo.listRole[i].IsDelete" type="checkbox" class="form-check-input">
                                            }
                                            <span asp-validation-for="@Model.RoleInfo.listRole[i].IsDelete"></span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-check form-switch">
                                            @if (Model.RoleInfo.listRole[i].IsApproval)
                                            {
                                                <input asp-for="@Model.RoleInfo.listRole[i].IsApproval" type="checkbox" class="form-check-input" checked>
                                            }
                                            else
                                            {
                                                <input asp-for="@Model.RoleInfo.listRole[i].IsApproval" type="checkbox" class="form-check-input">
                                            }
                                            <span asp-validation-for="@Model.RoleInfo.listRole[i].IsApproval"></span>
                                        </div>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div style="height:50px"></div>
                
            </div>
        </form>

    </div> <!-- container-fluid -->
</div>
<!-- Required datatable js -->
<script src="~/Layouts/minible/libs/tns-simple/js/jquery-3.7.0.js"></script>
<script src="~/Layouts/minible/libs/tns-simple/js/dataTables.min.js"></script>
<script>

</script>